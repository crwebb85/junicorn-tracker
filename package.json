{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:infastructure": "yarn workspace infastructure build",
    "build:bootstrap": "yarn workspace bootstrap build",
    "build": "concurrently --kill-others-on-fail \"yarn build:infastructure\"  \"yarn build:bootstrap\" ",
    "watch:infastructure": "yarn workspace infastructure watch",
    "watch:bootstrap": "yarn workspace bootstrap watch",
    "watch": "concurrently --kill-others-on-fail \"yarn watch:infastructure\"  \"yarn watch:bootstrap\" ",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "format": "prettier --config .prettierrc --ignore-path .gitignore --write ."
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.5.1"
  }
}
